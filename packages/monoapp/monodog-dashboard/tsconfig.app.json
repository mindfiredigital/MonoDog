{
  // This is the crucial change: Extend the shared React config
  //   "extends": "@mindfiredigital/tsconfig/react.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    // Keep application-specific path aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // Keep the app-specific build info file
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo"
  },
  "include": ["src"],
  "exclude": ["node_modules", "__tests__", "dist"]
  // All other compiler options (target, strict, jsx, module, etc.)
  // are now inherited from @monorepo-dashboard/tsconfig/react.json!
}
