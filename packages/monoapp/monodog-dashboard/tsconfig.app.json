{
  "compilerOptions": {
    "jsx": "react-jsx",
    // Keep application-specific path aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // Keep the app-specific build info file
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo"
  },
  "include": ["src"],
  "exclude": ["node_modules", "__tests__", "dist"]
}
